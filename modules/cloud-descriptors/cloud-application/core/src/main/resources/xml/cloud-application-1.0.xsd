  <!-- Root element -->
  <xs:element name="cloud-application" type="cloudApplicationType">
    <xs:annotation>
      <xs:documentation>
        The &lt;cloud-application> element is the root element of the XML file.

        Example:
        &lt;cloud-application
        xmlns="http://jpaas.jonas.ow2.org/cloud-application-v6"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jpaas.jonas.ow2.org/cloud-application-v6 http://jpaas.jonas.ow2.org/cloud-application-v6.xsd"
        name="demo" version="6">
        ...
        &lt;/cloud-application>
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="cloudApplicationType">
    <xs:annotation>
      <xs:documentation>
        The &lt;cloud-application type describe an application.
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="name"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="description"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="version"
                  type="xs:string"
                  minOccurs="0"
                  maxOccurs="1"/>
      <xs:element name="instance"
                  type="xs:string"
                  minOccurs="0"
                  maxOccurs="1"/>
      <xs:element name="requirements"
                  type="requirementsType"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="capabilities"
                  type="capabilitiesType"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="deployables"
                  type="deployablesType"
                  minOccurs="0"
                  maxOccurs="1"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="requirementsType">
    <xs:annotation>
      <xs:documentation>
        The &lt;requirements type describe global requirements of the application - expressed in a LDAP query syntax.
      </xs:documentation>
    </xs:annotation>
    <xs:sequence minOccurs="0" maxOccurs="unbounded">
      <xs:element name="requirement"
                  type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="capabilitiesType">
    <xs:annotation>
      <xs:documentation>
        The &lt;requirements type describe capabilities offered by the application..
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="application"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="service"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="deployablesType">
    <xs:annotation>
      <xs:documentation>
      </xs:documentation>
    </xs:annotation>
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="embedded-xml:xml-deployable" minOccurs="0"/>
      <xs:element ref="artefact:artefact-deployable" minOccurs="0"/>
    </xs:choice>
  </xs:complexType>

</xs:schema>