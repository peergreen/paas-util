  <xs:element name="jk-node-template" type="jkNodeTemplateType">
    <xs:annotation>
      <xs:documentation>
        <![CDATA[
          Apache : JK node template
        ]]>
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="jkNodeTemplateType">
    <xs:annotation>
      <xs:documentation>
        <![CDATA[
           The JK node template type describe a router : Apache / Jk
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="configuration"
                  type="configurationType"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="sla-enforcement"
                  type="slaEnforcementType"
                  minOccurs="1"
                  maxOccurs="1"/>
    </xs:all>
    <xs:attribute name="type" type="xs:string" use="required"/>
    <xs:attribute name="name" type="xs:string" use="required"/>
    <xs:attribute name="id" type="xs:string" use="required"/>
  </xs:complexType>

  <xs:complexType name="configurationType">
    <xs:annotation>
      <xs:documentation>
        <![CDATA[
          The configuration type describe the configuration of a router Apache / Jk
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="jk-ref"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
    </xs:all>
  </xs:complexType>
  
  <xs:complexType name="slaEnforcementType">
    <xs:annotation>
      <xs:documentation>
      <![CDATA[
          The sla-enforcement type describe sla-enforcement of a router Apache / Jk
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="health"
                  type="healthType"
                  minOccurs="0"/>
      <xs:element name="elasticity"
                  type="elasticityType"
                  minOccurs="0"/>
    </xs:all>
  </xs:complexType>
  
  <xs:complexType name="healthType">
    <xs:annotation>
      <xs:documentation>
      <![CDATA[
          The health type describe the health of a router Apache / Jk
        ]]>
      </xs:documentation>
    </xs:annotation>
  </xs:complexType>

  <xs:complexType name="elasticityType">
    <xs:annotation>
      <xs:documentation>
      <![CDATA[
         The elasticity type describe the elasticity of a router Apache / Jk
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:attribute name="min" type="xs:int" use="required"/>
    <xs:attribute name="max" type="xs:int" use="required"/>
  </xs:complexType>
</xs:schema>