  <xs:element name="node-template" type="jonasNodeTemplateType">
    <xs:annotation>
      <xs:appinfo>
        <jaxb:factoryMethod name="jonasNodeTemplate" />
      </xs:appinfo>
      <xs:documentation>
        <![CDATA[
          JOnAS node template
        ]]>
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="jonasNodeTemplateType">
    <xs:annotation>
      <xs:documentation>
        <![CDATA[
          The jonas node template type describe the container JOnAS
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="configuration"
                  type="configurationType"/>
      <xs:element name="sla-enforcement"
                  type="slaEnforcementType"/>
    </xs:all>
    <xs:attribute name="type" type="xs:string" use="required"/>
    <xs:attribute name="name" type="xs:string" use="required"/>
    <xs:attribute name="id" type="xs:string" use="required"/>
  </xs:complexType>

  <xs:complexType name="configurationType">
    <xs:annotation>
      <xs:documentation>
        <![CDATA[
        The configuration type describe the JOnAS configuration
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="java-ref"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="java-options"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="jonas-ref"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="slaEnforcementType">
    <xs:annotation>
      <xs:documentation>
      <![CDATA[
        The sla-enforcement type describe the sla-enforcement of JOnAS
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="health"
                  type="healthType"/>
      <xs:element name="elasticity"
                  type="elasticityType"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="healthType">
    <xs:annotation>
      <xs:documentation>
      <![CDATA[
        The health type describe the health of JOnAS
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="jmx-indicator"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="elasticityType">
    <xs:annotation>
      <xs:documentation>
      <![CDATA[
        The elasticity type describe the elasticity of JOnAS
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="session"
                  type="sessionType"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="aversion"
                  type="aversionType"
                  maxOccurs="1"/>
      <xs:element name="scaling-rules"
                  type="scalingRulesType"
                  minOccurs="1"
                  maxOccurs="1"/>
    </xs:all>
    <xs:attribute name="min" type="xs:int" use="required"/>
    <xs:attribute name="max" type="xs:int" use="required"/>
  </xs:complexType>

  <xs:complexType name="sessionType">
    <xs:annotation>
      <xs:documentation>
      <![CDATA[
        The session type describe the session of JOnAS
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:attribute name="persistence" type="xs:boolean" use="required"/>
    <xs:attribute name="replication" type="xs:boolean" use="required"/>
  </xs:complexType>

  <xs:complexType name="aversionType">
    <xs:annotation>
      <xs:documentation>
      <![CDATA[
        The aversion type describe the aversion of JOnAS
        ]]>
      </xs:documentation>
    </xs:annotation>
  </xs:complexType>

  <xs:complexType name="scalingRulesType">
    <xs:annotation>
      <xs:documentation>
      <![CDATA[
        The scaling rules type describe scaling rules of JOnAS
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="throughput"
                  type="throughputType"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="response-time"
                  type="responseTimeType"
                  minOccurs="1"
                  maxOccurs="1"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="throughputType">
    <xs:all>
      <xs:element name="jmx-indicator"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="scaleup-threshold"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="scaledown-threshold"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="responseTimeType">
    <xs:all>
      <xs:element name="jmx-indicator"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="scaleup-threshold"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="scaledown-threshold"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
    </xs:all>
  </xs:complexType>
</xs:schema>

