  <xs:element name="external-db-node-template" type="externalDBNodeTemplateType">
    <xs:annotation>
      <xs:documentation>
        <![CDATA[
          External-db node template
        ]]>
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="externalDBNodeTemplateType">
    <xs:annotation>
      <xs:documentation>
        <![CDATA[
          The external-db node template type describe an external-db
          External database means database not manged by JPaaS, eg. hosted in another cloud
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:choice>
      <xs:element name="configuration"
                  type="configurationType"/>
    </xs:choice>
    <xs:attribute name="type" type="xs:string" use="required"/>
    <xs:attribute name="name" type="xs:string" use="required"/>
    <xs:attribute name="id" type="xs:string" use="required"/>
  </xs:complexType>

  <xs:complexType name="configurationType">
    <xs:annotation>
      <xs:documentation>
        <![CDATA[
          The configuration type describe the configuration of an external-db
        ]]>
      </xs:documentation>
    </xs:annotation>
    <xs:all>
      <xs:element name="driver-location"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="url"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="classname"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="user"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
      <xs:element name="pwd"
                  type="xs:string"
                  minOccurs="1"
                  maxOccurs="1"/>
    </xs:all>
  </xs:complexType>

</xs:schema>